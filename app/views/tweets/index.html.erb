<div class="row">
  <div class="col-4">
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= current_user.name %></h5>
        <p class="card-text"><%= current_user.email %></p>
      </div>
      <% if user_signed_in? %>
      <%= link_to "New Tweet", new_tweet_path, class:"card-footer btn" %>
      <% end %>
    </div>
  </div>
  <div class="col-8">

    <div class="list-group">
      <% @tweets.each do |tweet| %>
        <%= link_to tweet, class: "list-group-item list-group-item-action" do %>
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1"><%= tweet.user.username %></h5>
          </div>
          <p class="mb-1"><%= tweet.content %></p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

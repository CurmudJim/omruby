<div class="row">
  <div class="col-4">
    <div class="card" style="width: 18rem;">
      <% if user_signed_in? %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to current_user.username, user_path(current_user.username) %></h5>
          <p class="card-text"><%= current_user.name %></p>
        </div>
        <%= link_to "New Tweet", new_tweet_path, class:"card-footer btn" %>
      <% else %>
        <div class="card-body text-center">
          <%= link_to "Sign in", signin_path, class:"btn btn-primary"  %>
          or
          <%= link_to "Sign up", signup_path, class:"btn btn-secondary"  %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-8">

    <div class="list-group">
      <% @tweets.each do |tweet| %>
        <%= link_to tweet, class: "list-group-item list-group-item-action" do %>
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1"><%= tweet.user.username %></h5>
          </div>
          <% if tweet.image.present? %>
            <center><%= image_tag tweet.image, class:"img-fluid" %></center>
          <% end %>
          <p class="mb-1"><%= tweet.content %></p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

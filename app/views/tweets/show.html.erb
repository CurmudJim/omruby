

<div class="row">
  <div class="offset-md-2 col-md-8">
    <div class="card">
      <h5 class="card-header"><%= @tweet.user.username %></h5>
      <div class="card-body">
        <h5 class="card-title">Special title treatment</h5>
        <p class="card-text"><%= @tweet.content %></p>
        <% if @tweet.user == current_user %>
          <%= link_to 'Edit', edit_tweet_path(@tweet) , class:"btn btn-warning" %>
          <%= link_to 'Delete', @tweet, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
        <% end %>
        <%= link_to 'Back', tweets_path, class:"btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

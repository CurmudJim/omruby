

<div class="row">
  <div class="offset-md-2 col-md-8">
    <div class="card bg-dark">
      <h5 class="card-header"><%= link_to @tweet.user.username, user_path(@tweet.user.username) %></h5>
      <div class="card-body">
        <% if @tweet.image.present? %>
          <%= image_tag @tweet.image, class: "card-img-top img-fluid"  %>
        <% end %>
        <p class="card-text"><%= @tweet.content %></p>
        <% if @tweet.user == current_user %>
          <%= link_to 'Edit', edit_tweet_path(@tweet) , class:"btn btn-warning" %>
          <%= link_to 'Delete', @tweet, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
        <% end %>
        <%= link_to 'Back', tweets_path, class:"btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

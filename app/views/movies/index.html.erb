<h1>Movies</h1>

<table class="table table-striped table-bordered table-dark ">
  <thead>
    <tr>
      <th>Title</th>
      <th>Nominations</th>
      <% if user_signed_in? %>
        <th>
          Watched (<%= (current_user.get_up_voted Movie).length %>)
        </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
    <tr>
      <td>
        <%= link_to movie.title, movie_path(movie), id: movie.title %>
      </td>
      <td>
        <%= movie.nominations.length %>
      </td>
      <% if user_signed_in? %>
      <td>
        <% if !current_user.voted_up_on? movie %>
          <%= link_to watched_movie_path(movie), method: :post do %>
            <i class= 'fa fa-eye unvote'></i>
          <% end %>
        <% else %>
          <%= link_to unwatched_movie_path(movie), method: :delete do %>
            <i class= 'fa fa-eye vote'></i>
          <% end %>
        <% end %>


      </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

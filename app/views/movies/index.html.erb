<h1>Movies</h1>

<table class="table table-striped table-bordered table-dark ">
  <thead>
    <tr>
      <th>Title</th>
      <th>Nominations</th>
      <% if user_signed_in? %>
        <th>Watched</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= link_to movie.title, movie_path(movie) %>
        </td>
        <td>
          <%= movie.nominations.length %>
        </td>
        <% if user_signed_in? %>
          <td>
            <% if !current_user.voted_up_on? movie %>
            <%= link_to 'Watched', watched_movie_path(movie), method: :post, class: 'btn btn-success', data: { confirm: 'Are you sure?' } %>
            <% else %>
            Watched
          <% end %>
        </td>
        <% end %>
      </tr>
              <% end %>
  </tbody>
</table>

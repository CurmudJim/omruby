<!-- <h1>Movies</h1> -->
<% if !user_signed_in? %>
  <div class="jumbotron text-center">
    <h2>Sign in to keep track.</h2>
    <%= link_to "Sign in", signin_path, class:"btn btn-lg btn-dark"  %>
    <%= link_to "Sign up", signup_path, class:"btn btn-lg btn-light"  %>
  </div>
<% end %>
<div class="row">
  <div class="col-7 list-group text-center rounded-circle">
    <div class="row list-group-item">
      <div class="col-12">
        <h4>Oscars</h4>
      </div>
    </div>
    <div class="row list-group-item d-flex justify-content-between align-items-center">
      <div class="col-4">
        <h5>Title</h5>
      </div>
      <div class="col-4">
        <h5>Nominations</h5>
      </div>
      <div class="col-4">
        <h5>Watched (<%= (current_user.get_up_voted Movie).length %>)</h5>
      </div>
    </div>
    <% @movies.each do |movie| %>
      <div class="row list-group-item d-flex justify-content-between align-items-center">
        <div class="col-4 d-flex justify-content-start">
          <%= link_to movie.title, movie_path(movie), class:"btn" %>
        </div>
        <div class="col-4">
          <%= movie.nominations.length %>
        </div>
        <div class="col-4">
          <% if !current_user.voted_up_on? movie %>
            <%= link_to watched_movie_path(movie), method: :post, id: movie.title do %>
              <h5><i class= 'btn fa fa-eye-slash unvote'></i></h5>
            <% end %>
          <% else %>
            <%= link_to unwatched_movie_path(movie), method: :delete, id: movie.title do %>
              <h4><i class= 'btn fa fa-eye vote'></i></h4>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-sm">

  </div>

  <div class="col-4 list-group text-center">
    <div class="row list-group-item">
      <div class="col-12">
        <h4>Leaderboard</h4>
      </div>
    </div>
    <div class="row list-group-item d-flex justify-content-between align-items-center ">
      <div class="col-6">
        <h5>Name</h5>
      </div>
      <div class="col-6">
        <h5>Watch Count</h5>
      </div>
    </div>
    <% @users.each do |user| %>
      <%= link_to user_path(user.username), class:"row list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
        <div class="col-6">
          <%= user.name %>
        </div>
        <div class="col-6">
          <%= (user.get_up_voted Movie).length %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
